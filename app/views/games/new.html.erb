<div class="game">
<h1>New game</h1>

<% @letters.each do |letter| %>
  <span class="letter-box"><%= letter %></span>
<% end %>

<form method="get" action="/score" class="form">
  <label>What is the longest word you can find?</label>
  <input type="text" name="word" class="form-control">
  <input type="submit" value="Play" class="btn btn-primary">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
</form>
</div>
